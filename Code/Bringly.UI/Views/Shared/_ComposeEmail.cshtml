@model Bringly.Domain.ComposeEmail
@{
    Layout = "~/Views/Shared/MasterPages/PartialMaster.cshtml";
}

@if (ViewBag.IspopUp != null)
{
    <script>

        window.parent.closeModelPopUpForm(true);
    </script>
}
else
{
    //using (@Html.BeginForm("ComposeEmail", "Email", FormMethod.Post))
    <form method="post" action="/Email/ComposeEmail" style="width:100%;">

        <div class="close-button">
            <button onclick="window.parent.closeModelPopUpForm(false)" class="btn-close">&times;</button>
        </div>
        
            <div class="right-side mail-box">
                <div class="shadow-box">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.EmailTo, new { @class = "form-control", @placeholder = "To", @multiple = "multiple ",@type="email" })
                            @Html.ValidationMessageFor(m => m.EmailTo)
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @placeholder = "Subject" })
                            @Html.ValidationMessageFor(m => m.Subject)
                        </div>
                        <div class="form-group">
                            @Html.TextAreaFor(m => m.Body, new { @class = "form-control", @placeholder = "Message" })
                            @Html.ValidationMessageFor(m => m.Body)
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Send" />
                        </div>
                </div>

            </div>

    </form>

}
