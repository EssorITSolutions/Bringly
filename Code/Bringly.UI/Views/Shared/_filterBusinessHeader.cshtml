@model Bringly.Domain.Business.BusinessObject

<div class="filter-panel">
    <div class="container">
        <form>
            <div class="row">
                <div class="form-group col-lg-5 col-md-5">
                    <label class=" col-lg-2 col-md-2 filter-label">Delivery:</label>
                    <div class="form-check form-check-inline" style="padding-top:6px;">
                        <label class="custom-control custom-radio">
                            <input id="deliveryRadio" name="deliverypickupRadio" type="radio" checked="" class="custom-control-input">
                            <span class="custom-control-indicator"></span>
                            <span class="custom-control-description">Delivery</span>
                        </label>
                        <label class="custom-control custom-radio">
                            <input id="pickUpRadio" name="deliverypickupRadio" type="radio" class="custom-control-input">
                            <span class="custom-control-indicator"></span>
                            <span class="custom-control-description">Pick Up</span>
                        </label>
                    </div>
                </div>
                <div class="form-group col-lg-6 col-md-6">
                    <label class="col-lg-3 col-md-3 filter-label float-left" id="lbl-business-header">Business :</label>
                    <select id="selectBusinessHeader" class="col-lg-8 col-md-8 form-control" onchange="location = this.value;">
                        @foreach (var obj in Model.BusinessTypeList)
                        {
                            if (obj.BusinessTypeGuid == ViewBag.selectedBusinessTypeGuid)
                            {
                                <option selected="selected"  value="/business/LocationListUser?id=@Model.CityName&BusinessTypeGuid=@obj.BusinessTypeGuid">@obj.BusinessTypeName</option>
                            }
                            else
                            {
                                <option value="/business/LocationListUser?id=@Model.CityName&BusinessTypeGuid=@obj.BusinessTypeGuid">@obj.BusinessTypeName</option>
                            }
                        }
                    </select>
                </div>
            </div>
        </form>
    </div>
</div>
