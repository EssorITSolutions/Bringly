@model bool
@using Bringly.DomainLogic

@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/MasterPages/AuthorizeUserMaster.cshtml";
}

@{
    if (ViewBag.isPopUpOpen != null && ViewBag.isPopUpOpen == true)
    {
        <script>
            window.parent.closeModelPopUpFormById(false, "ChangePassword");
        </script>
    }
}

<div class="col-lg-9 col-md-7 col-sm-12">
    <div class="right-side">
        <div class="page-sub-title">
            <h3>Settings</h3>
        </div>

        <div class="row Manage_user_row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="shadow-box">
                    <div class="setting-toggle">
                        @if (UserVariables.UserRole == Bringly.Domain.Enums.User.UserRoles.Merchant)
                        {
                            <p class="text-weight">Self Delivery</p>
                            <div class="toggle-Switch sep-switch">
                                <label class="toggle-off">Off</label>
                                <label class="switch">
                                    <input type="checkbox" checked="@Model" onchange="onSelfDeliveryChange(event);">
                                    <span class="slider round"></span>
                                </label>
                                <label for="TriSeaSuccess" class="toggle-on">On</label>
                            </div>
                        }
                        <ul class="list-unstyled">
                            <li><a href="#" onclick="onChangePw(event);">Change Password</a></li>
                            <li><a href="#" onclick="onDeActiveAccount(event);">Deactivate Account</a></li>
                            <li><a href="#" onclick="onDeleteAccount(event);">Delete Account</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
