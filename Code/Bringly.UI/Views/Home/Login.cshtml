@model Bringly.Domain.User.UserLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/MasterPages/AnonymousUser.cshtml";
}

<div class="bg-white section-shadow sign-in-section sign-margin">
    <div class="row">
        <div class="col-lg-6 col-md-12 col-sm-12">
            <h3 class="heading-sign">Sign In</h3>
            <form method="post" class="form-sign-in">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="map-form form-icon">
                        @Html.TextBoxFor(t => t.Username, new { @placeholder = "Your Email", @type = "email", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Username)
                        <label class="icon-map"><i class="fa fa-envelope" aria-hidden="true"></i></label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="map-form form-icon">
                        @Html.PasswordFor(t => t.UserPassword, new { @placeholder = "Password", @type = "password", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserPassword)
                        <label class="icon-map key-img"><img src="/templates/images/key-password.png" /></label>
                    </div>
                </div>
                <div class="form-group">
                    <p class="text-right forgot-password"><a href="/Home/ForgotPassword">Forgot password?</a></p>
                </div>

                <div class="form-group">

                    <button type="submit" class="btn btn-primary btn-lg">SIGN IN</button>

                    <p class="button-link">Don't have account? <a href="/Home/UserRegistration">Sign up</a></p>

                </div>


            </form>
        </div>

        <div class="col-lg-6 col-md-12 col-sm-12">
            <div class="right-content-form">
                @{ Html.RenderPartial("~/Views/Home/_socialMediaLogin.cshtml");}
            </div>
        </div>
    </div>
</div>


