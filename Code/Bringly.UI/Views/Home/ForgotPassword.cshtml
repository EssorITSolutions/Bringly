@model Bringly.Domain.User.UserRegistration
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/MasterPages/AnonymousUser.cshtml";
    var s = Model;
}

<div class="bg-white section-shadow sign-in-section sign-margin">
    <div class="row">
        <div class="col-lg-6 col-md-12 col-sm-12">
            <h3 class="heading-sign">Forgot Password?</h3>

            <form class="form-sign-in" method="post">

                <div class="form-group">
                    <label>Check your email to reset your password </label>
                    <div class="map-form form-icon">
                        @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control"})
                        @Html.ValidationMessageFor(m => m.EmailAddress)
                        <label class="icon-map"><i class="fa fa-envelope" aria-hidden="true"></i></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-3 col-md-3 col-sm-12">
                        <button type="submit" class="btn btn-primary btn-lg">SUBMIT</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-lg-6 col-md-12 col-sm-12">
            <div class="right-content-form">
                @{ Html.RenderPartial("~/Views/Home/_socialMediaLogin.cshtml");}
            </div>
        </div>
    </div>
</div>

