@model List<Bringly.Domain.Items>
@{
    ViewBag.Title = "MerchantMenu";
    Layout = "~/Views/Shared/MasterPages/AuthorizeUserMaster.cshtml";
}

<div class="col-lg-9 col-md-7 col-sm-12">
    <div class="right-side">
        <div class="page-sub-title">
            <h3>My Menu</h3>
        </div>

        <div class="row Manage_user_row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <p>
                    <a href="#" class="btn btn-primary btn-lg">+ &nbsp; ADD CATEGORY</a>
                    <a href="#" class="link-border">Manage Category</a>
                </p>
                <div class="categories-option">
                    <select class="form-control">
                        <option>Pizza</option>
                        <option>Salad</option>
                        <option>Pasta</option>
                        <option>Meat</option>
                        <option>Drinks</option>
                        <option>Desserts</option>
                    </select>
                </div>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 Menu-detail">
                <h5 class="text-weight">Pizza</h5>
                <p><a onclick="OpenMenuItemPopUp('@(Guid.Empty)');" id="anchorAddMenuItemPopUp" href="#" class="btn btn-primary btn-lg">+ &nbsp; ADD ITEM</a></p>
                @Html.Partial("_MerchantItemsList", Model)               
            </div>
        </div>
    </div>
</div>
